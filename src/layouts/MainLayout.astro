---
import MainHead from './MainHead.astro';
import Footer from "../components/Footer.astro";
import Nav from '../components/Nav.astro';
// sytle import
import "../styles/global.css"

interface Props{
	title ?: string;
	description ?: string;
}
const {title = "My Astro Blog", description = "This is a blog"} = Astro.props as Props
---
<html lang="en">
	<MainHead {title} {description} />
	<body>
		<Nav />
		<slot>
            Default text
        </slot>
	<Footer />
	</body>
</html>