---
import Link from "./Link.astro";


const { prevUrl, nextUrl } = Astro.props;
---

<nav aria-label="Blog Pages" class="pagination">
    {
        prevUrl && (
            <Link 
                text="Previous"
                href={prevUrl}
                style="primary"
                borderVisible={true}
                isFilled={false}
                icon={{
                    name: "material-symbols:arrow-back",
                    side: "left"
                }}
            />
        )
    }
    {
        nextUrl && (
            <Link 
                text="Next"
                href={nextUrl}
                style="primary"
                borderVisible={true}
                isFilled={false}
                icon={{
                    name: "material-symbols:arrow-forward",
                    side: "right"
                }}
            />
        )
    }
</nav>


<style>
    .pagination{
        display: flex;
        justify-content: center;
        gap: 20px
    }
</style>